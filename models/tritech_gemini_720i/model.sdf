<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="tritech_gemini_720i">
    <link name="forward_sonar_link">
      <inertial>
        <pose>0 0 0 0 0 0</pose>
        <mass>4.35</mass>
        <inertia>
          <ixx>0.0360</ixx>          <!-- 1/12ml^2 -->
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0</iyy>
          <iyz>0</iyz>
          <izz>0.0360</izz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <mesh>
            <uri>model://tritech_gemini_720i/meshes/COLLISION-p900.dae</uri>
          </mesh>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <mesh>
            <uri>model://tritech_gemini_720i/meshes/p900.dae</uri>
          </mesh>
        </geometry>
      </visual>

      <sensor name="image_sonar" type="depth">
        <visualize>true</visualize>
        <always_on>true</always_on>
        <update_rate>10</update_rate>
        <camera>
          <!-- 120 degrees for the Gemini 720i -->
          <horizontal_fov>2.0944</horizontal_fov>
          <image>
            <width>256</width>
            <!-- Set vertical FOV by setting image height -->
            <!-- Also depends on horiztonal FOV!! -->
            <!-- height = vertBeamwidth*numBeams/horiBeamwidth
                  (everything in radians) -->
            <!-- For 20 deg. -->
            <height>43</height>
            <format>R8G8B8</format>
          </image>
          
          <!-- <clip>
            <near>0.2</near>            
            <far>10</far>
          </clip> -->
          <depth_camera>
            <output>depths</output>
          </depth_camera>
          <save enabled="false">
            <path>/tmp/camera</path>
          </save>
        </camera>
        <plugin filename="libnps_multibeam_sonar_ros_plugin.so" name="forward_sonar">
          <!-- Sonar properties -->
          <sonarFreq>720e3</sonarFreq>
          <!-- computed bandwidth looking at real data 
               max_ranges vs. image heights. Probably could be improved -->
          <bandwidth>95.14e3</bandwidth>
          <!-- soundSpeed verified from single deployment with Seabotix. -->
          <soundSpeed>1505</soundSpeed>
          <!-- sourceLevel from here: https://fundyforce.ca/resources/
                                      ea188b39d4994ac05c3d20cd36000d62/
                                      Appendix6-2019-Imaging-Sonar-Review-for-
                                      Marine-Environmental-Monitoring-Around-
                                      Tidal-Turbines-JOSLIN.pdf-->
          <sourceLevel>197</sourceLevel>
          <minDistance>0.2</minDistance> <!-- defined by tritech -->
          <maxDistance>2</maxDistance>
          <constantReflectivity>false</constantReflectivity>
          <!-- The CSV databsefile is located at the worlds folder -->
          <reflectivityDatabaseFile>variationalReflectivityDatabase_OSU.csv</reflectivityDatabaseFile>
          <raySkips>1</raySkips>
          <sensorGain>0.01</sensorGain>
          <plotScaler>2.5</plotScaler>
          <writeLog>false</writeLog>
          <debugFlag>false</debugFlag>
          <writeFrameInterval>5</writeFrameInterval>
          <!-- Where to write the csvs -->
          <writeLoc>/home/bob/Downloads/sonar_test/</writeLoc>
          <!-- This name is prepended to ROS topics -->
          <cameraName>tritech_gemini_720i</cameraName>
          <!-- ROS publication topics -->
          <imageTopicName>image_raw</imageTopicName>
          <cameraInfoTopicName>image_raw/camera_info</cameraInfoTopicName>
          <pointCloudTopicName>point_cloud</pointCloudTopicName>
          <depthImageTopicName>image_depth</depthImageTopicName>
          <depthImageCameraInfoTopicName>image_depth/camera_info</depthImageCameraInfoTopicName>
          <sonarImageRawTopicName>sonar_image_raw</sonarImageRawTopicName>
          <sonarImageTopicName>sonar_image</sonarImageTopicName>
          <frameName>forward_sonar_optical_link</frameName>
        </plugin>
      </sensor>
    </link>
  </model>
</sdf>